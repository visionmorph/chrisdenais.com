---
interface Props {
	variant?: 'filled' | 'outline';
	disabled?: boolean;
	class?: string;
	type?: 'button' | 'submit' | 'reset';
	ariaLabel: string;
}

const { 
	variant = 'outline', 
	disabled = false,
	class: className = '',
	type = 'button',
	ariaLabel
} = Astro.props;

const variantClass = variant === 'filled' ? 'filled' : '';
---

<button 
	type={type}
	class:list={['icon-only', variantClass, className]}
	disabled={disabled}
	aria-label={ariaLabel}
>
	<slot />
</button>
