---
interface Props {
	variant?: 'outlined' | 'filled';
	iconOnly?: boolean;
	disabled?: boolean;
	class?: string;
	type?: 'button' | 'submit' | 'reset';
	ariaLabel?: string;
}

const { 
	variant = 'outlined', 
	iconOnly = false, 
	disabled = false,
	class: className = '',
	type = 'button',
	ariaLabel
} = Astro.props;

const variantClass = variant === 'filled' ? 'filled' : '';
const iconOnlyClass = iconOnly ? 'icon-only' : '';
---

<button 
	type={type}
	class:list={[variantClass, iconOnlyClass, className]}
	disabled={disabled}
	aria-label={iconOnly ? ariaLabel : undefined}
>
	<slot />
</button>
