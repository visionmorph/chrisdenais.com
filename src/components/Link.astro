---
interface Props {
	href: string;
	text: string;
	icon?: string;
	target?: string;
	rel?: string;
	size?: "default" | "h2";
	color?: "default" | "inverse";
color
}

const {
	href,
	text,
	icon,
	target = "_self",
	rel = "noopener noreferrer",
	size = "default",
	color = "default",
} = Astro.props;

let sizeClass = "link";

if (color === "inverse") {
	sizeClass = "link-h2-inverse";
} else {
	if (size === "h2") sizeClass = "link-h2";
}
---
<a href={href} target={target} rel={rel} class={sizeClass}>
	{text}
	{icon && <span class="link-icon" set:html={icon} />}
</a>
