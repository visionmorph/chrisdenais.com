---
interface Props {
  href: string;
  text: string;
  icon?: string;
  target?: string;
  rel?: string;
}

const {
  href,
  text,
  icon,
  target = "_self",
  rel = "noopener noreferrer",
} = Astro.props;
---

<a href={href} target={target} rel={rel} class="link">
  <span class="link-text">{text}</span>
  {icon && <span class="link-icon" set:html={icon} />}
</a>

<style>
.link {
	color: #78a9ff;
	display: inline-flex;     /* align text and icon horizontally */
	align-items: flex-start;
	overflow: visible;
	gap: 0.5em;              /* space between text and icon */
	width: fit-content;
}

.link:hover {
	color: #a6c8ff;
	text-decoration: underline;
	text-decoration-thickness: 0.0625em;
	text-underline-offset: 0.15625em;
}

.link:active,
.link:focus {
	outline-offset: -2px;
	outline: 2px solid #fff;
}

.link:focus-visible {
	color: #fff;
}

.link-icon {
	display: inline-flex;
	width: 1.25rem;
	height: 1.25rem;
	min-width: 1.25rem;
	min-height: 1.25rem;
	margin-top: .25rem;
}

.link-icon :global(svg) {
	width: 100%;
	height: 100%;
}

.link-icon :global(svg path) {
	fill: currentColor;
}
</style>
