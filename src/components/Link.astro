---
interface Props {
  href: string;
  text: string;
  icon?: string;       // Optional SVG or HTML string for icon
  target?: string;
  rel?: string;
}

const {
  href,
  text,
  icon,
  target = "_self",
  rel = "noopener noreferrer",
} = Astro.props;
---

<a href={href} target={target} rel={rel} class="link">
  <span>{text}</span>
  {icon && <span innerHTML={icon} />}
</a>
